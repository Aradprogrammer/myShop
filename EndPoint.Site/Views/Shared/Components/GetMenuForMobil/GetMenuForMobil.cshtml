@using asp_store_bugeto.Application.Services.Common.Queries.GetMenuItems;
@model List<MenuItemDto>;
@{
    Layout = null;
}

@for (int i = 0; i < Model.Count; i++)
{
    <li>
        <a href="#" class="collapsed" type="button" data-toggle="collapse" data-target="#collapse_@i" aria-expanded="false" aria-controls="collapse_@i"><i class="mdi mdi-chevron-down"></i>@Model[i].CategoryName</a>

        @if (Model[i].SubCategories.Count > 0)
        {

            <div id="collapse_@i" class="collapse" aria-labelledby="heading_@i" data-parent="#accordionExample" style="">
                <ul>
                    @for (int j = 0; j < Model[i].SubCategories.Count; j++)
                    {
                        <li class="">
                            <a href="~/products?catid=@Model[i].SubCategories[j].CategoryID" class="category-level-2">@Model[i].SubCategories[j].CategoryName</a>
                        </li>
                    }
                </ul>
            </div>
        }
    </li>
}