@using asp_store_bugeto.Application.Services.Carts.Queries.GetMyCart
@model NyCartDto
@{
    Layout = null;
}
<div class="divider-space-card d-block">
    <div class="header-cart-basket">
        <a href="~/carts" class="cart-basket-box">
            <span class="icon-cart">
                <i class="mdi mdi-shopping"></i>
            </span>
            <span class="title-cart">سبد خرید</span>
            <span class="price-cart" id="totalcarthead">
                @Model.TotalPrice.ToString("n0")
                <span>تومان</span>
            </span>
            <span class="count-cart" id="countcarthead">@Model.CountItem</span>
        </a>
        <div class="widget-shopping-cart">
            <div class="widget-shopping-cart-content">
                <ul class="product-list-widget">
                    @foreach (var item in Model.Items)
                    {
                        <li class="mini-cart-item">
                            <div class="mini-cart-item-content">
                                <a onclick="RemoveCartItem(@item.ProductId,@Model.CartId)" class="mini-cart-item-close">
                                    <i class="mdi mdi-close"></i>
                                </a>
                                <a href="#" class="mini-cart-item-image d-block">
                                    <img src="~/@item.ImgSrc">
                                </a>
                                <span class="product-name-card">@item.ProductName</span>
                                <div class="variation">
                                    <span class="variation-n"> .</span>
                                    <p class="mb-0">. </p>
                                </div>
                                <div class="quantity">
                                    <span class="quantity-Price-amount" id="producttotalhead_@item.ProductId">
                                        @item.Total.ToString("n0")
                                        <span>تومان</span>
                                    </span>
                                </div>
                            </div>
                        </li>
                    }


                </ul>
                <div class="mini-card-total">
                    <strong>قیمت کل : </strong>
                    <span class="price-total"id="totalcartin">
                        @Model.TotalPrice.ToString("n0")
                        <span>تومان</span>
                    </span>
                </div>
                <div class="mini-card-button">
                    <a href="~/carts" class="view-card">مشاهده سبد خرید</a>
                    <a href="~/pay" class="card-checkout">تسویه حساب</a>
                </div>
            </div>
        </div>
    </div>
</div>