@section Script{
            <script src="~/sweetalert2/sweetalert2.min.js"></script>
            <link rel="stylesheet" href="~/sweetalert2/sweetalert2.min.css" />
            <script>
            
            function ShoewModalEditeEmail(EmailID,EmailText,Emailsender,EmailTitel)
            {
            $('#Email_Text_html').empty();
            $('#Email_Text').val(EmailText);
            $('#Email_Text_html').append(EmailText);
            $('#Email_Titel').val(EmailTitel);
            $('#Email_Id').val(EmailID);
            $('#Sender').val(Emailsender);
            $('#EditEmail').modal('show');
            
            }
            
            function changEmailText(){
                $('#Email_Text_html').empty();
                var Emailtext=$('#Email_Text').val();
                $('#Email_Text_html').append(Emailtext);
            }
            function EditeEmail(){
               
                var EmailId=$('#Email_Id').val();
                var EmailTitel=$('#Email_Titel').val();
                var EmailText=$('#Email_Text').val();
                var EmailSender=$('#Sender').val();
                var postdata={
                    'Email_Id':EmailId,
                    'Email_Text':EmailText,
                    'Email_Titel':EmailTitel,
                    'Email_Sender':EmailSender,
                }
                console.log(postdata);
                   $.ajax({
                       contentType: 'application/x-www-form-urlencoded',
                       dataType: 'json',
                       type: "POST",
                       url: "Email/EditeEmail",
                       data: postdata,
                       success: function (data) {
                           if (data.isSuccess == true) {
                               swal.fire(
                                   'موفق!',
                                   data.message,
                                   'success'
                               ).then(function (isConfirm) {
                                   location.reload();
                               });
                   
                   
                           }
                           else {
                   
                               swal.fire(
                                   'هشدار!',
                                   data.message,
                                   'warning'
                               ) ;
                   
                           }
                       },
                       error: function (request, status, error) {
                           if(request.responseText != null){
                           alert(request.responseText );
                           }else{
                           alert(error.text );}
                   
                       }
                   
                   });
            }
            
            </script>
}
            
@section Modals {
                 <div class="modal fade text-left" id="EditEmail" tabindex="-1" role="dialog" aria-labelledby="EditEmail" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <label class="modal-title text-text-bold-600" id="EditEmail">ویرایش ایمیل</label>
